 	  .cpu_voltage = 1050000,},
 	{
-	 .pll_rate = 396000000,
-	 .cpu_rate = 198000000,
-	 .cpu_podf = 1,
+	 .pll_rate = 792000000,
+	 .cpu_rate = 167000000,
+	 .cpu_podf = 4,
 	 .cpu_voltage = 900000,},
 };
 
