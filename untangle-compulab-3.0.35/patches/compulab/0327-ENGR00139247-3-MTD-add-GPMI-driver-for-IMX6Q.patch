 {
 	struct nand_chip *nand = mtd->priv;
@@ -2437,6 +2458,9 @@ static const struct platform_device_id gpmi_ids[] = {
 	}, {
 		.name = "imx50-gpmi-nfc",
 		.driver_data = IS_MX50,
+	}, {
+		.name = "imx6q-gpmi-nfc",
+		.driver_data = IS_MX6Q,
