+				ldb.ldb_di_clk[0] = clk_get(g_ldb_dev, "ldb_di0_clk");
+				clk_set_rate(ldb.ldb_di_clk[0], ldb_clk_prate/7);
+				if (ldb.blank[0] == FB_BLANK_UNBLANK &&
+				    clk_get_usecount(ldb.ldb_di_clk[0]) == 0)
+					clk_enable(ldb.ldb_di_clk[0]);
