+			ldb_clk_parent =
+				clk_get_parent(ldb.ldb_di_clk[1]);
+			clk_set_rate(ldb_clk_parent, ldb_clk_prate);
+			clk_set_parent(di_clk, ldb.ldb_di_clk[1]);
+			clk_put(di_clk);
+			clk_put(ldb.ldb_di_clk[1]);
+		} else {
+			ldb.ldb_di_clk[0] =
+				clk_get(g_ldb_dev, "ldb_di0_clk");
+			di_clk = clk_get(g_ldb_dev, "ipu_di0_clk");
