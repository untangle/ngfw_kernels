+		case LDB_DUL_DI0:
+		case LDB_SPL_DI0:
+			ldb.ldb_di_clk[0] = clk_get(g_ldb_dev, "ldb_di0_clk");
+			ldb.ldb_di_clk[1] = clk_get(g_ldb_dev, "ldb_di1_clk");
