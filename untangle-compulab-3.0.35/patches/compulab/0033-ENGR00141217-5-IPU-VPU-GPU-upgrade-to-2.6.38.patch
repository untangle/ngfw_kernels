+				clk_set_rate(ldb.ldb_di_clk[1], ldb_clk_prate/7);
+				if (ldb.blank[1] == FB_BLANK_UNBLANK &&
+				    clk_get_usecount(ldb.ldb_di_clk[1]) == 0)
+					clk_enable(ldb.ldb_di_clk[1]);
+				clk_put(ldb.ldb_di_clk[1]);
+			}
