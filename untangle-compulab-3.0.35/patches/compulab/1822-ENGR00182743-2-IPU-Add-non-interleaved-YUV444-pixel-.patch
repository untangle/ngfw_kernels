 	case IPU_PIX_FMT_NV12:
 		m_calculated = 8;
 		break;
diff --git a/drivers/mxc/ipu3/ipu_common.c b/drivers/mxc/ipu3/ipu_common.c
index 561433f..4e3526c 100644
