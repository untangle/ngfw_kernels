+		if (!strcmp(disp->name, name)) {
+			if (disp->init) {
+				memcpy(&disp->setting, setting,
+						sizeof(struct mxc_dispdrv_setting));
+				ret = disp->init(disp);
+				if (ret >= 0) {
+					disp->active = true;
+					/* setting may need fix-up */
+					memcpy(setting, &disp->setting,
+							sizeof(struct mxc_dispdrv_setting));
+					found = 1;
+					break;
+				}
+			}
+		}
