@@ -258,8 +253,9 @@ static cs_t colorspaceofpixel(int fmt)
 		return NULL_CS;
 	}
 }
+EXPORT_SYMBOL_GPL(colorspaceofpixel);
 
-static int need_csc(int ifmt, int ofmt)
+int need_csc(int ifmt, int ofmt)
