+	gpio_free(MX6SL_ARM2_EPDC_SDDO_9);
+	gpio_free(MX6SL_ARM2_EPDC_GDSP);
+	gpio_free(MX6SL_ARM2_EPDC_GDCLK);
+	gpio_free(MX6SL_ARM2_EPDC_SDSHR);
