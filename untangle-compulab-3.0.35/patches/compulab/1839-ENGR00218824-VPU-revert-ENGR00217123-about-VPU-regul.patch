 	mutex_lock(&vpu_data.lock);
 	if (open_count > 0 && !(--open_count)) {
-
-		vpu_regulator = regulator_get(NULL, "cpu_vddvpu");
-		if (IS_ERR(vpu_regulator))
-			printk(KERN_ERR
-			       "%s: failed to get vpu regulator\n", __func__);
-		else
-			regulator_disable(vpu_regulator);
