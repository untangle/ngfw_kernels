@@ -516,7 +537,8 @@ static void esdhc_pltfm_exit(struct sdhci_host *host)
 			free_irq(gpio_to_irq(boarddata->cd_gpio), host);
 	}
 
-	clk_disable(pltfm_host->clk);
+	if (!host->clk_mgr_en)
+		clk_disable(pltfm_host->clk);
 	clk_put(pltfm_host->clk);
 	kfree(imx_data);
 }
